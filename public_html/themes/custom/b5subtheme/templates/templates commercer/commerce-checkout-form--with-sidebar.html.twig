{#
/**
 * @file
 * Two column template for the checkout form.
 *
 * Available variables:
 * - form: The form.
 *
 * @ingroup themeable
 */
#}
<div class="layout-checkout-form clearfix container">
	<div class="row">
		<div class="layout-region layout-region-checkout-main col-sm-12 border-1 p-2 bg-dark bg-opacity-25 rounded mb-5">
			{{ form|without('sidebar', 'actions') }}
		</div>
		<div class="layout-region layout-region-checkout-secondary col-sm-12">
			<h5>{% trans %}
				Order summary
				{% endtrans %}</h5>
			{{ form.sidebar }}
		</div>
		<div class="layout-region layout-region-checkout-footer col-sm-12">
			{{ form.actions }}
		</div>
	</div>
</div>
